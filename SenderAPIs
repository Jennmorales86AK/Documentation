                    - id: 43
                      name: TRADE RELATED SERVICES
                    - id: 44
                      name: TRADE REALISATION OF EXPORT BILLS
                    - id: 45
                      name: TRADE ADVANCE RECEIPT AGAINST EXPORT
                    fieldType: DROPDOWN,
                    fieldId: REMITTANCE_PURPOSE,
